@model BusTicketsMonolitic.Web.Data.Models.ReservaModelDb.ReservaModelAccess

@{
    ViewData["Title"] = "Delete Reservation";
}

<h1>Delete Reservation</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Reservation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Model.IdReserva
        </dd>
        <dt class="col-sm-2">
            Viaje
        </dt>
        <dd class="col-sm-10">
            @Model.IdViaje
        </dd>
        <dt class="col-sm-2">
            Pasajero
        </dt>
        <dd class="col-sm-10">
            @Model.IdPasajero
        </dd>
        <dt class="col-sm-2">
            Asientos Reservados
        </dt>
        <dd class="col-sm-10">
            @Model.AsientosReservados
        </dd>
        <dt class="col-sm-2">
            Monto Total
        </dt>
        <dd class="col-sm-10">
            @Model.MontoTotal
        </dd>
        <dt class="col-sm-2">
            Fecha Creación
        </dt>
        <dd class="col-sm-10">
            @Model.FechaCreacion
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="IdReserva" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
